{
    "info": {
        "name": "Employee & Salary API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/register"
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/login"
                    }
                }
            ]
        },
        {
            "name": "Employees",
            "item": [
                {
                    "name": "Add Employee",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/employees"
                    }
                },
                {
                    "name": "Get All Employees",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/employees"
                    }
                },
                {
                    "name": "Update Employee",
                    "request": {
                        "method": "PUT",
                        "url": "{{baseUrl}}/employees/:id"
                    }
                },
                {
                    "name": "Delete Employee",
                    "request": {
                        "method": "DELETE",
                        "url": "{{baseUrl}}/employees/:id"
                    }
                },
                {
                    "name": "Download Monthly Report PDF",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/employees/report/:month/pdf"
                    }
                },
                {
                    "name": "Get Monthly Report",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/employees/month/:month"
                    }
                },
                {
                    "name": "Get Employee Report",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/employees/employee/:id"
                    }
                }
            ]
        },
        {
            "name": "Salaries",
            "item": [
                {
                    "name": "Calculate Salary",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/salaries"
                    }
                },
                {
                    "name": "Get All Salaries",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/salaries"
                    }
                },
                {
                    "name": "Update Salary",
                    "request": {
                        "method": "PUT",
                        "url": "{{baseUrl}}/salaries/:id"
                    }
                },
                {
                    "name": "Delete Salary",
                    "request": {
                        "method": "DELETE",
                        "url": "{{baseUrl}}/salaries/:id"
                    }
                },
                {
                    "name": "Get Salaries by Year",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/salaries/year/:year"
                    }
                },
                {
                    "name": "Get Available Years",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/salaries/years"
                    }
                },
                {
                    "name": "Get Salaries by Month",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/salaries/:month"
                    }
                },
                {
                    "name": "Get Current Month Net Total",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/salaries/net/current-month"
                    }
                },
                {
                    "name": "Download Payslip",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/salaries/:id/payslip"
                    }
                }
            ]
        }
    ]
}
